<h1 class="display-5">Create New Category</h1>

<%= form_for @category do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>
  <%= f.submit :Create, class: 'btn btn-primary btn-dark' %>
<% end %>
