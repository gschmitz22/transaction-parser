<div class='container'>
  <h1 class='display-4 float-left'>Categories</h1>
  <a class='btn btn-dark float-right create-button' href="/categories/new">Create</a>
</div>

<table class='table table-dark table-striped'>
  <thead>
    <tr>
      <th scope='col'>Name</th>
      <th scope='col'>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
