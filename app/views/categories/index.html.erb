<table class='table table-dark table-striped'>
  <thead>
    <tr>
      <th scope='col'>Name</th>
      <th scope='col'>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
