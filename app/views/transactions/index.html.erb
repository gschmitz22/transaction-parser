<div class='container'>
  <h1 class='display-4 float-left'>Transactions</h1>
  <a class='btn btn-dark float-right create-button' href='/transactions/import_view'>Import</a>
</div>
<table class='table table-dark table-striped table-bordered table-hover table-sm'>
  <thead>
    <tr>
      <th scope='col'>Date</th>
      <th scope='col'>Description</th>
      <th scope='col'>Account</th>
      <th scope='col'>Category</th>
      <th scope='col'>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.date %></td>
        <td><%= transaction.description %></td>
        <td><%= transaction.account.name %></td>
        <td><%= transaction.category.name %></td>
        <td><%= transaction.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>
