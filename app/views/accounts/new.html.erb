<h1 class="display-5">Create new account</h1>

<%= form_for @account do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :amount %>
    <%= f.number_field :amount, class: 'form-control', step: 0.01, value: 0 %>
  </div>
  <%= f.submit :Create, class: 'btn btn-primary' %>
<% end %>
