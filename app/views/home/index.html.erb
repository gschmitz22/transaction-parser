<div class="container">
   <div class="row justify-content-between align-items-center">
    <h1 class='display-4 col-9'>Monthly View</h1>
    <div class="form-group col-2" >
      <%= form_tag '/', method: "get", id: "month", class: "form-control" do %>
        <%= label_tag "Month" %>
        <%= select "Months", "month", options_for_select({January: 1,
                                                          February: 2,
                                                          March: 3,
                                                          April: 4,
                                                          May: 5,
                                                          June: 6,
                                                          July: 7,
                                                          August: 8,
                                                          September: 9,
                                                          October: 10,
                                                          November: 11,
                                                          December: 12}, selected: @month), {prompt: 'Select month'}, {class: 'form-control'} %>
        <%= submit_tag "Update", class: 'btn btn-primary btn-sm margin-top', style: 'margin-top: 10px;' %>
      <% end %>
    </div>
   </div>

  <div class="row justify-content-center">
    <div class="col-4">
      <table class='table table-dark table-striped table-bordered table-sm'>
        <tbody>
        <tr>
          <th scope='row'>Date</th>
        </tr>
        <tr>
          <th scope='row'>Taxes</th>
        </tr>
        <tr>
          <th scope='row'>Roth</th>
        </tr>
        <tr>
          <th scope='row'>Traditional</th>
        </tr>
        <tr>
          <th scope='row'>ASPP</th>
        </tr>
        <tr>
          <th scope='row'>Deductions</th>
        </tr>
        <tr>
          <th scope='row'>Net Pay</th>
        </tr>
        </tbody>
      </table>
    </div>
    <div class="col-5">
      <table class='table table-dark table-striped table-bordered table-sm'>
        <thead>
        <tr>
          <th scope='col'>Date</th>
          <th scope='col'>Description</th>
          <th scope='col'>Category</th>
          <th scope='col'>Amount</th>
        </tr>
        </thead>
        <tbody>
        <% @transactions.each do |transaction| %>
          <tr>
            <td><%= transaction.date %></td>
            <td><%= transaction.description %></td>
            <td><%= transaction.category.name %></td>
            <td><%= transaction.amount %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-3">
      <table class='table table-dark table-striped table-bordered table-sm'>
        <thead>
        <tr>
          <th scope='col'>Name</th>
          <th scope='col'>Amount</th>
          <th scope='col'>Last Amount</th>
        </tr>
        </thead>
        <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category[:name] %></td>
            <td><%= category[:amount] %></td>
            <td><%= category[:last_amount] %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
